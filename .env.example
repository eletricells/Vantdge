# =============================================================================
# Vantdge Environment Variables
# Copy this file to .env and fill in your values
# =============================================================================

# Required API Keys
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Optional Web Search (for broader literature discovery)
TAVILY_API_KEY=your-tavily-api-key-here
BRAVE_API_KEY=your-brave-api-key-here

# Database Configuration (PostgreSQL)
# Railway will provide DATABASE_URL automatically when you add a Postgres plugin
DATABASE_URL=postgresql://user:password@host:5432/database
DRUG_DATABASE_URL=postgresql://user:password@host:5432/database
DISEASE_LANDSCAPE_URL=postgresql://user:password@host:5432/database
PAPER_CATALOG_URL=postgresql://user:password@host:5432/database

# MCP Configuration
MCP_SERVER_URL=http://localhost:8080
ENABLE_MCP_DATABASE=true

# Paper Catalog Configuration
ENABLE_PAPER_CATALOG=true

# PDF Processing Configuration
USE_CAMELOT=true
CAMELOT_FLAVOR=lattice
CAMELOT_FALLBACK_TO_STREAM=true
EXTRACT_FIGURES=false
DATA_DIR=data
PAPERS_DIR=data/papers
EXTRACTED_DIR=data/extracted

# Optional API Keys for Data Sources
CLINICALTRIALS_API_KEY=
PUBMED_API_KEY=your-pubmed-api-key-here
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-key-here

# AI Model Configuration
CLAUDE_MODEL=claude-sonnet-4-5-20250929
MAX_TOKENS=4000
MAX_ITERATIONS=3
CONFIDENCE_THRESHOLD=0.8

# Logging
LOG_LEVEL=INFO

# Feature Flags
ENABLE_WEB_SEARCH=true
MAX_WEB_SEARCHES_PER_AGENT=10

# =============================================================================
# Railway Deployment Notes:
# - Set these variables in your Railway project settings
# - DATABASE_URL is automatically set when you add a Postgres plugin
# - Never commit actual API keys to version control
# =============================================================================

